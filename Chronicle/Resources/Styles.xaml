<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <AcrylicBrush x:Key="CustomPanelAcrylicBrush"
                          BackgroundSource="Backdrop" 
                            TintColor="#000000"
                            TintOpacity="0.1"/>
            <AcrylicBrush x:Key="CustomAppAcrylicBrush"
                          BackgroundSource="HostBackdrop"
                          TintColor="#000000"
                          TintOpacity="0.5"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <AcrylicBrush x:Key="CustomPanelAcrylicBrush"
                          BackgroundSource="Backdrop" 
                            TintColor="#FFFF0000"
                            TintOpacity="0.1"/>
            <AcrylicBrush x:Key="CustomAppAcrylicBrush"
                          BackgroundSource="HostBackdrop"
                          TintColor="#ffffff"
                          TintOpacity="0.5"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
